<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Material3 Theme -->
    <style name="Theme.MazeWarden3D" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        
        <!-- System UI colors -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Window flags for immersive experience -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- NoActionBar variant for activities -->
    <style name="Theme.MazeWarden3D.NoActionBar" parent="Theme.MazeWarden3D">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.MazeWarden3D.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.MazeWarden3D.NoActionBar</item>
    </style>
    
    <!-- Game UI component styles -->
    <style name="GameButton" parent="Widget.Material3.Button.Icon">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="iconSize">28dp</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
    </style>
    
    <style name="GameButton.Primary" parent="GameButton">
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="iconTint">@color/md_theme_light_onPrimary</item>
    </style>
    
    <style name="GameButton.Ability" parent="GameButton">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="cornerRadius">36dp</item>
        <item name="backgroundTint">@color/md_theme_light_tertiary</item>
        <item name="iconTint">@color/md_theme_light_onTertiary</item>
        <item name="iconSize">36dp</item>
    </style>
    
    <!-- Control panel styling -->
    <style name="ControlPanel" parent="Widget.Material3.CardView">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:alpha">0.9</item>
    </style>
    
    <!-- Typography styles -->
    <style name="GameText" parent="Widget.Material3.TextView">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
    </style>
    
    <style name="GameText.Title" parent="GameText">
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="GameText.Body" parent="GameText">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>
    
    <style name="GameText.Caption" parent="GameText">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
        <item name="android:alpha">0.7</item>
    </style>
</resources>