<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#8B4513"
                android:endColor="#654321"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#FFD700" />
            <corners android:radius="12dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#654321"
                android:endColor="#3E2723"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#CD853F" />
            <corners android:radius="10dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>