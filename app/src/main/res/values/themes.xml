<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Material Theme -->
    <style name="Theme.MazeWarden3D" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- System UI colors -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Window flags for immersive experience -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- NoActionBar variant for activities -->
    <style name="Theme.MazeWarden3D.NoActionBar" parent="Theme.MazeWarden3D">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.MazeWarden3D.Splash" parent="Theme.MazeWarden3D">
        <item name="android:windowBackground">@color/purple_500</item>
    </style>
    
    <!-- Game UI component styles -->
    <style name="GameButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="iconSize">28dp</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
    </style>
    
    <style name="GameButton.Primary" parent="GameButton">
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="GameButton.Ability" parent="GameButton">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="backgroundTint">@color/teal_200</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <!-- Control panel styling -->
    <style name="ControlPanel" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:alpha">0.9</item>
    </style>
    
    <!-- Typography styles -->
    <style name="GameText">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="GameText.Title" parent="GameText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="GameText.Body" parent="GameText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>
    
    <style name="GameText.Caption" parent="GameText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:alpha">0.7</item>
    </style>
</resources>